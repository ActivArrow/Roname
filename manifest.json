{
  "manifest_version": 3,
  "name": "Roblox Friends Renamer",
  "version": "1.0",
  "description": "Renames 'Connections' back to 'Friends' on roblox.com.",
  "icons": {
    "48": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.roblox.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["scripting"]
}